<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.notice">
	<!--select : 개별조회  -->
	<select id="selectOne" parameterType="int" resultType="dto">
		select * from notice where num=#{num}
	</select>
	
	<!--select : 게시물 전체 갯수  -->
	<select id="selectTotal" resultType="int">
		select count(*) from notice
	</select>
	
	<!-- insert -->
	<insert id="insert" parameterType="dto">
		insert into notice values (notice_seq.nextval, #{title}, #{content}, 0, sysdate, #{fileName})
	</insert>
	
	<!-- update-->
	<update id="update" parameterType="dto">
		update notice set title=#{title}, content=#{content}, logTime=#{sysdate}, fileName=#{fileName} where num=#{num}
	</update>
	
	<!-- update : 조회수 증가 -->
	<update id="updateHit" parameterType="int">
		update notice set hit = hit+1 where num=#{num}
	</update>
	
	<!-- delete : 삭제 -->
	<delete id="delete" parameterType="int">
		delete notice where num=#{num}
	</delete>

</mapper>
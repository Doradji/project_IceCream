<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.notice">
    <!-- select : 개별 조회 -->
    <select id="selectOne" parameterType="int" resultType="noticeDTO">
        select * from notice where num=#{num}
    </select>
    
    <!-- select : 게시물 전체 갯수 -->
    <select id="selectTotal" resultType="int">
       select count(*) from notice
    </select>
    
     <!-- select : 리스트 조회 -->
    <select id="selectList" parameterType="java.util.Map" resultType="noticeDTO">
        <![CDATA[
        select *
        from (select ROWNUM rn, tt.* from (select * from notice order by num asc) tt)
        where rn >= #{startNum}
          and rn <= #{endNum}
        ]]>
    </select>
    
    <!-- insert : 게시물 등록 -->
    <insert id="insert" parameterType="noticeDTO">
         insert into notice values (notice_seq.nextval, #{title}, #{content}, 0, sysdate, #{fileName})
    </insert>
    
    <!-- update : 게시물 수정 -->
    <update id="modify" parameterType="noticeDTO">
        update notice set title=#{title}, content=#{content}, logTime=#{sysdate}, fileName=#{fileName} 
        where num=#{num}
    </update>
    
    <!-- update : 조회수 수정 -->
    <update id="updateHit" parameterType="int">
        update notice set hit = hit+1 where num=#{num}
    </update>
    
    <!--delete : 게시물 삭제  -->
    <delete id="delete" parameterType="int">
		delete notice where num=#{num}
	</delete>
</mapper>

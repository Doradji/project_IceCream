<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.shop">
    <!-- 가계 신규 등록 -->
    <insert id="insert" parameterType="shopDTO">
        insert into shop
        values (SHOP_SEQ.nextval, #{name}, #{addr}, #{tel})
    </insert>

    <!-- 개별 조회 -->
    <select id="selectOne" parameterType="int" resultType="shopDTO">
        select *
        from shop
        where num = #{num}
    </select>

    <!-- 리스트 조회 -->
    <select id="selectList" parameterType="java.util.Map" resultType="shopDTO">
        <![CDATA[
        select *
        from (select ROWNUM rn, tt.* from (select * from shop order by name asc) tt)
        where rn >= #{startNum}
          and rn <= #{endNum}
        ]]>
    </select>

    <!-- 전체 개수 조회 -->
    <select id="selectTotal" resultType="int">
        select count(*) as cnt
        from shop
    </select>

    <!-- 삭제 -->
    <delete id="delete" parameterType="int">
        delete
        from shop
        where num = #{num}
    </delete>

    <!-- 내용 수정 -->
    <update id="modify" parameterType="shopDTO">
        update shop
        set name = #{name},
            addr = #{addr},
            tel  = #{tel}
        where num = #{num}
    </update>
</mapper>
